{
  "name": "ryogo-travel-app",
  "description": "RyoGo Travel App Monorepo",
  "version": "1.0.0",
  "author": {
    "name": "kakashiorion",
    "email": "nitin.kool.1808@gmail.com",
    "url": "https://github.com/kakashiorion"
  },
  "devDependencies": {
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "main": "index.js",
  "packageManager": "npm@11.6.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:agency": "turbo run dev --filter=@ryogo-travel-app/agency-app",
    "dev:driver": "turbo run dev --filter=@ryogo-travel-app/driver-app",
    "dev:web": "turbo run dev --filter=@ryogo-travel-app/web-app",
    "install:agency": "npm install --workspace=@ryogo-travel-app/agency-app",
    "install:driver": "npm install --workspace=@ryogo-travel-app/driver-app",
    "install:web": "npm install --workspace=@ryogo-travel-app/web-app",
    "lint": "turbo run lint"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
